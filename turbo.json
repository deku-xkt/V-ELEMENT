{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "build-only": {
      "dependsOn": ["^build-only"],
      "outputs": ["dist/**"]
    },
    "type-check": {
      "dependsOn": ["^type-check"],
      "outputs": []
    },
    "lint": {
      "dependsOn": ["^lint"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["^test"],
      "outputs": ["coverage/**"]
    },
    "preview": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "docs:build": {
      "dependsOn": ["^docs:build"],
      "outputs": ["docs/.vitepress/dist/**"]
    },
    "docs:dev": {
      "cache": false,
      "persistent": true
    },
    "docs:preview": {
      "cache": false,
      "persistent": true
    }
  }
}
